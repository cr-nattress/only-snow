{
  "name": "only-snow",
  "private": true,
  "scripts": {
    "dev": "turbo dev",
    "dev:web": "pnpm --filter web dev",
    "dev:frontend": "pnpm --filter frontend dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "typecheck": "turbo typecheck",
    "test": "turbo test",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "db:push": "pnpm --filter @onlysnow/db db:push",
    "db:seed": "pnpm --filter @onlysnow/db db:seed",
    "db:studio": "pnpm --filter @onlysnow/db db:studio",
    "db:generate": "pnpm --filter @onlysnow/db db:generate",
    "pipeline:forecast": "pnpm --filter @onlysnow/pipeline-forecast-refresh dev",
    "pipeline:conditions": "pnpm --filter @onlysnow/pipeline-conditions-refresh dev",
    "pipeline:snotel": "pnpm --filter @onlysnow/pipeline-snotel-daily dev",
    "pipeline:avalanche": "pnpm --filter @onlysnow/pipeline-avalanche-daily dev",
    "pipeline:road-conditions": "pnpm --filter @onlysnow/pipeline-road-conditions dev",
    "pipeline:drive-times": "pnpm --filter @onlysnow/pipeline-drive-times dev",
    "setup": "./scripts/setup-local.sh"
  },
  "devDependencies": {
    "@types/node": "^20",
    "prettier": "^3.4.2",
    "turbo": "^2.4.4",
    "typescript": "^5.7.3"
  },
  "packageManager": "pnpm@9.15.4",
  "engines": {
    "node": ">=20"
  }
}
