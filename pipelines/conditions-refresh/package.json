{
  "name": "@onlysnow/pipeline-conditions-refresh",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "scripts": {
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "start": "node dist/index.js",
    "dev": "tsx src/cli.ts",
    "discover-webcams": "tsx src/discover-webcams.ts",
    "sync-snow-reports": "tsx src/sync-snow-reports.ts",
    "bundle": "esbuild src/index.ts --bundle --platform=node --target=node20 --outfile=deploy/index.js --format=esm --external:@google-cloud/functions-framework"
  },
  "dependencies": {
    "@google-cloud/functions-framework": "^3.4.5",
    "@onlysnow/db": "workspace:*",
    "@onlysnow/pipeline-core": "workspace:*",
    "@onlysnow/redis": "workspace:*",
    "dotenv": "^16.4.7",
    "drizzle-orm": "^0.39.3"
  },
  "devDependencies": {
    "@types/node": "^20",
    "tsx": "^4.19.2",
    "esbuild": "^0.24.2",
    "typescript": "^5.7.3"
  }
}
